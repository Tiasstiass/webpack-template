{%- render 'about-us', section: section -%}

{% schema %}
{
  "name": "About us",
  "class": "about-us",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "VIDEOS"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "Vimeo Desktop",
      "accept": [
        "vimeo"
      ]
    },
    {
      "type": "video_url",
      "id": "video_url_mobile",
      "label": "Vimeo Mobile",
