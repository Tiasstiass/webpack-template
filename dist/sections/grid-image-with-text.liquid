{% render 'grid-image-with-text', section: section %}

{% schema %}
{
  "name": "Grid image with text",
  "class": "vue-grid-image-text",
  "tag": "section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Learn more"
    }
  ],
  "blocks": [
    {
      "type": "image-with-text",
      "name": "Image with text",
      "settings": [
        {
          "type": "image_picker",
          "id": "img_desktop",
          "label": "Image Desktop"
        },
        {
          "type": "image_picker",
          "id": "img_mobile",
          "label": "Image Mobile"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid image with text",
      "category": "Content"
    }
  ]
}
{% endschema %}
