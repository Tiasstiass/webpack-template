{% layout 'theme' %}

<div id="template" class="main-form__container text-center pt-10 pb-10">
  {%- style -%}
    {% comment %} Buttons & Form Styling {% endcomment %}
    .main-form__container button a {
      color: var(--button-cta-color)!important;
    }
    .main-form__container button:hover > a {
      color: var(--button-cta-hover-color)!important;
    }
    .main-form__container form input {
      height: 50px;
      width: 459px!important;
      margin-bottom: 25px!important;
      border: 2px solid #7E7E7E!important;
      margin: 0 auto;
    }
    .main-form__container button {
      width: 459px;
      min-height: 50px;
      margin: 0 auto 25px auto;
    }
    .errors li {
      text-align: center;
      padding: 4px;
    }
    {% comment %} Responsive CSS {% endcomment %}
    @media(max-width:768px) {
      .main-form__container form input {
        width: 100%!important;
      }
      .main-form__container button {
        width: 100%!important;
        padding: 0px 25px!important;
      }
    }
  {%- endstyle -%}

  <h3>{{ 'customer.reset_password.title' | t }}</h3>

  {% form 'reset_customer_password' %}
    {{ form.errors | default_errors }}

    <div id="password" class="clearfix large_form">
      <input placeholder="{{ 'form.password' | t }}" type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
    </div>
    <div id="password_confirm" class="clearfix large_form">
      <input placeholder="{{ 'form.confirm_new_password' | t }}" type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
    </div>
    <div class="action_bottom">
      <button class="button cta mt-1" type="submit">{{ 'customer.reset_password.title' | t }}</button>
    </div>
  {% endform %}
</div>
