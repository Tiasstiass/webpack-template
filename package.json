{
  "name": "shopify-theme-lab",
  "version": "1.0.0",
  "description": "Shopify Webpack tailwind",
  "author": "Shoplab",
  "license": "MIT",
  "scripts": {
    "start": "run-p -sr shopify:serve webpack:watch",
    "deploy": "run-s webpack:build && cd dist && shopify theme push",
    "deploy:new": "run-s webpack:build && cd dist && shopify theme push -u",
    "webpack:watch": "cross-env NODE_ENV=development BROWSERSLIST_ENV=development BROWSERSLIST_CONFIG=.config/.browserslistrc webpack --config .config/webpack/webpack.dev.js --watch --progress",
    "webpack:build": "cross-env NODE_ENV=production BROWSERSLIST_ENV=production BROWSERSLIST_CONFIG=.config/.browserslistrc webpack --config .config/webpack/webpack.prod.js --progress",
    "shopify:serve": "cd dist && shopify theme serve",
    "shopify:pull": "cd dist && shopify theme pull",
    "lint:shopify": "cd dist && shopify theme check"
  },
  "dependencies": {
    "@splidejs/vue-splide": "^0.6.3",
    "fslightbox-vue": "^2.0.1",
    "tailwindcss": "^3.0.2",
    "vanilla-lazyload": "^17.6.1",
    "vue": "^3.2.26"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@vue/compiler-sfc": "^3.2.26",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^4.2.1",
    "eslint": "^8.13.0",
    "eslint-plugin-vue": "^8.6.0",
    "eslint-webpack-plugin": "^3.1.1",
    "mini-css-extract-plugin": "^2.4.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-html": "^1.3.0",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.1",
    "url-loader": "^4.1.1",
    "vue-loader": "^16.8.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  }
}
